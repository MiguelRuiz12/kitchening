<!DOCTYPE html>
<html lang="ES">

<%- include('./partials/head',{
	title : "dashboard"
}) %>

<body>
	<%- include('./partials/header-admin') %>

    <main class="container">
		<section class="row my-5">
			<div class="col-12 col-md-10 mx-auto">
				<div class="card">
					<div class="card-header d-flex justify-content-between">
						<h4 class="cart-title">Restaurantes</h4>
						<a class="btn btn-dark" href="/productos/agregar">Nuevo</a>
					</div>
					<div class="card-body table-responsive">
					<table class="table table-striped">
						<thead>
						  <tr>
							<th scope="col">#</th>
							<th scope="col">Nombre</th>
							<th scope="col">Direccion</th>
							<th scope="col">Categoria</th>
							<th scope="col">Acciones</th>
						  </tr>
						</thead>
						<tbody>
							<% products.forEach(({id,name,address,categoria, mainImage, description,phone}) => { %>
								<tr>
									<th scope="row"><%= id %></th>
									<td><%= name %></td>
									<td><%= address %></td>
									<td><%= categoria %></td>
									<td>
										<div class="d-flex gap-2">
										<button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= id %>"><i class="fa-solid fa-eye"></i></a></button>
										<a class="btn btn-sm btn-outline-success" href="/productos/editar/<%= id %>"><i class="fa-solid fa-pencil"></i></a>
										<a class="btn btn-sm btn-outline-danger" href="/productos/eliminar/<%= id %>"><i class="fa-solid fa-trash"></i></a>
										<%- include('./partials/modal-product-admin',{
											id,
											name,
											address,
											categoria,
											mainImage,
											description,
											phone
										}) %>
									</div>
									</td>
								  </tr>
							<% }) %>
						  
						</tbody>
					 </table>
					 </div>
				</div>
			</div>
		</section>
	</main>
	
	<%- include('./partials/scripts') %>

</body>
</html>